<div data-hook="admin_post_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @post } %>
  <h1><%= t(:new_post) %></h1>
</div>

<div data-hook="admin_post_new_form">
  <%= semantic_form_for([:admin, @post], :html => { :enctype => "multipart/form-data" }) do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div data-hook="admin_post_new_form_buttons">
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>