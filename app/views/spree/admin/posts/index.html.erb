<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li>
      <p><%= button_link_to t(:new_post), new_object_url, :icon => 'add', :id => 'admin_new_post_link' %></p>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1><%= t(:listing_posts) %></h1>

<table class="index" id="listing_blogs" data-hook>
  <thead>
    <tr data-hook="admin_blogs_index_headers">
      <th><%= sort_link @search,:title, t(:post), {}, {:title => 'blog_name_title'} %></th>
	  <th><%= t(:published_at) %></th>
      <th data-hook="admin_users_index_header_actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @collection.each do |post|%>
      <tr id="<%= dom_id post %>" data-hook="admin_blogs_index_rows">
        <td width="270px" class='blog_name'><%=link_to post.title, object_url(post) %></td>
		<td width="80px" class='blog_published_at'><%= l post.published_at %></td>
        <td data-hook="admin_blogs_index_row_actions">
          <%= link_to_edit post, :class => 'edit' %> &nbsp;
          <%= link_to_delete post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @collection %>

<% content_for :sidebar do %>
  <div class="box" data-hook="admin_posts_sidebar">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="box">
        <h3><%= t(:search) %></h3>
		<%= label_tag nil, t(:date_range) %><br />
	      <div class="date-range-filter">
	        <div class="left sub-field">
	          <%= f.text_field :published_at_gt, :class => 'datepicker' %><br />
	          <%= label_tag nil, t(:start), :class => 'sub' %>
	        </div>
	        <div class="right sub-field">
	          <%= f.text_field :published_at_lt, :class => 'datepicker' %><br />
	          <%= label_tag nil, t(:stop), :class => 'sub' %>
	        </div>
	      </div>
        <%- locals = {:f => f} %>
        <div data-hook="admin_posts_index_search">
          <p>
            <%= f.label :title_cont, t(:title) %><br />
            <%= f.text_field :title_cont, :size => 15 %>
          </p>
          <p>
            <%= f.label :body_cont, t(:body) %><br />
            <%= f.text_field :body_cont, :size => 15 %>
          </p>
        </div>

        <div data-hook="admin_posts_index_search_buttons">
          <p><%= button t(:search) %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

